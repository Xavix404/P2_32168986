<%- include('template/cabecera.ejs') %>
    <main>
        <div class="adminPanel">
            <h1 class="adminTitle">Admin Panel</h1>
            <table class="adminTable">
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Telefono</th>
                    <th>Mensaje</th>
                    <th>Ip</th>
                    <th>Fecha</th>
                    <th>Pais</th>
                    <th>Ciudad</th>
                
                    <% contacts.forEach(element => { %>
                    <tr>
                        <td>
                            <p><%= element.ID %></p>
                        </td>
                        <td>
                            <p><%= element.name %></p>
                        </td>
                        <td>
                            <p><%= element.email %></p>
                        </td>
                        <td>
                            <p><%= element.phone %></p>
                        </td>
                        <td>
                            <p><%= element.message %></p>
                        </td>
                        <td>
                            <p><%= element.ip %></p>
                        </td>
                        <td>
                            <p><%= element.date %></p>
                        </td>
                        <td>
                            <p><%= element.country %></p>
                        </td>
                        <td>
                            <p><%= element.city %></p>
                        </td>
                    </tr>
                    <% }) %>
                
            </table>

        <form action="/admin/clear" method="post" onsubmit="return confirm('¿Estás seguro de que deseas borrar todos los contactos?');">
            <button type="submit" class="btn-danger">Limpiar base de datos</button>
        </form>
        <a href="/admin/logout" style="color: #fff; background: #FE2D48; padding: 0.5em 1em; border-radius: 4px; text-decoration: none;">Cerrar sesión</a>
        </div>
    </main>
<%- include('template/footer.ejs') %>